{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./base.json",
  "compilerOptions": {
    "noEmit": false,
    "jsx": "react-jsx",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "target": "ESNext",
    "declaration": true,
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"],
  "rootDir": ["./src"]
}
