{
  "private": true,
  "scripts": {
    "start": "turbo run start",
    "build": "turbo run build",
    "build:esp": "turbo run build --filter esp",
    "build:web": "turbo run build --filter web",
    "dev": "turbo run dev",
    "dev:esp": "turbo run dev --filter esp",
    "dev:web": "turbo run dev --filter web",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "type-check": "turbo run type-check",
    "madge": "turbo run madge",
    "deploy:apps:esp": "npm run build:esp && rm -rf embedded/esp/data/public_html/assets/* && cp -r apps/esp/dist/* embedded/esp/data/public_html"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.11.0",
    "eslint": "^8.56.0",
    "eslint-config-custom": "*",
    "madge": "^6.1.0",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4"
  },
  "name": "lightbar-turbo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "volta": {
    "node": "18.17.1",
    "npm": "10.1.0"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "lucide-react": "^0.344.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  }
}
